<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/patientinfo_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/patientinfo_base_margin"
        android:background="@drawable/patientinfo_base_block_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/nursingrecord_temperature_form_head_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_refresh"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_bedno"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nursingrecord_bed"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:layout_width="@dimen/nursingrecord_temperature_form_head_name"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/nursingrecord_name"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:id="@+id/tv_time3"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:id="@+id/tv_time4"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:id="@+id/tv_time5"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

            <TextView
                android:id="@+id/tv_time6"
                android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_temperature_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/patientinfo_base_detail_bg"
            android:divider="@color/patient_item_space_bg"
            android:dividerHeight="1dp"
            android:padding="1dp" />
    </LinearLayout>

</LinearLayout>