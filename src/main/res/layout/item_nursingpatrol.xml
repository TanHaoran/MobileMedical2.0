<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:padding="@dimen/popup_patient_item_padding" >

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="@dimen/patrol_time_width"
        android:layout_height="match_parent"
        android:padding="@dimen/popup_patient_item__content_padding"
        android:text="2015-9-30 10:33:40"
        android:textColor="#333333"
        android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

    <TextView
        android:textColor="#666666"
        android:id="@+id/tv_name"
        android:layout_width="@dimen/patrol_name_width"
        android:layout_height="match_parent"
        android:padding="@dimen/popup_patient_item__content_padding"
        android:text="罗志祥"
        android:textSize="@dimen/nursingrecord_temperature_form_head_textsize" />

</LinearLayout>