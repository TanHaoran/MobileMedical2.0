<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/patientinfo_bg"
    android:orientation="vertical" >

    <include
        android:id="@+id/in_topbar"
        layout="@layout/patientinfo_top_selectbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/patientinfo_base_margin"
        android:layout_marginRight="@dimen/patientinfo_base_margin"
        android:background="@drawable/popup_patient_item_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingTop="@dimen/patientinfo_cost_paddingtop" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/inhos"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_inhosid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/name"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_nametext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/bedno"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_bedtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/cost_prepaid"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_selectbar_bg"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/cost_all"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_selectbar_bg"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:text="@string/cost_balance"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_arrearage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_selectbar_bg"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/patientinfo_cost_item_height"
                android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_cost_item_leftpart_width"
                    android:layout_height="match_parent"
                    android:gravity="right|"
                    android:text="@string/payway"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />

                <TextView
                    android:id="@+id/tv_payway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                    android:text="+004"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_cost_text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>