<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/popup_patient_item_height"
    android:padding="@dimen/popup_patient_item_padding" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/popup_patient_item_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_bed"
            android:layout_width="@dimen/popup_patient_item_bed_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/popup_patient_item__content_padding"
            android:textSize="@dimen/popup_patient_item_bed_text_size" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/popup_patient_item__content_padding" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="@dimen/popup_patient_item_name_width"
                    android:layout_height="match_parent"
                    android:textColor="@color/homepage_conent_text"
                    android:textSize="@dimen/popup_patient_item_bed_text_size" />

                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="@dimen/popup_patient_item_sex_width"
                    android:layout_height="match_parent"
                    android:textColor="@color/patient_item_sex_text"
                    android:textSize="@dimen/popup_patient_item_sex_text_size" />

                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="@dimen/popup_patient_item_age_width"
                    android:layout_height="match_parent"
                    android:textColor="@color/patient_item_sex_text"
                    android:textSize="@dimen/popup_patient_item_sex_text_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_diagnosis"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:textColor="@color/patient_item_sex_text"
                android:textSize="@dimen/popup_patient_item_sex_text_size" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/arrow" />
    </LinearLayout>

</LinearLayout>