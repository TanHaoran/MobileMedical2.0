<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="@dimen/slidingmenu_width"
        android:layout_height="match_parent"
        android:background="@color/titlebar_bg"
        android:paddingRight="10dp" >

        <LinearLayout
            android:id="@+id/ll_namelayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slidingmenu_name_layout"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/slidingmenu_image_width"
                android:layout_height="@dimen/slidingmenu_image_height"
                android:layout_marginLeft="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/set_top_img" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/slidingmenu_username_text_size" />

                <TextView
                    android:id="@+id/tv_office"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_office_text_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/v_spaceline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ll_namelayout"
            android:background="@color/slidingmenu_space_line" />

        <LinearLayout
            android:id="@+id/ll_contentlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v_spaceline"
            android:orientation="vertical"
            android:paddingTop="22dp" >

            <LinearLayout
                android:id="@+id/ll_homepage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slidingmenu_item_height"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft" >

                <ImageView
                    android:id="@+id/iv_homepage"
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_sy" />

                <TextView
                    android:id="@+id/tv_homepage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slidingmenu_item_text_marinleft"
                    android:text="@string/homepage"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_item_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_patientinfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slidingmenu_item_height"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft" >

                <ImageView
                    android:id="@+id/iv_patientinfo"
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_bhxx" />

                <TextView
                    android:id="@+id/tv_patientinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slidingmenu_item_text_marinleft"
                    android:text="@string/patientinfo"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_item_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nursingrecord"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slidingmenu_item_height"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft" >

                <ImageView
                    android:id="@+id/iv_nursingrecord"
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_hllr" />

                <TextView
                    android:id="@+id/tv_nursingrecord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slidingmenu_item_text_marinleft"
                    android:text="@string/nursingrecord"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_item_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_orderexecute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slidingmenu_item_height"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft" >

                <ImageView
                    android:id="@+id/iv_orderexecute"
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_yzzx" />

                <TextView
                    android:id="@+id/tv_orderexecute"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slidingmenu_item_text_marinleft"
                    android:text="@string/dropexecute"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_item_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_nursinglist"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slidingmenu_item_height"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft" >

                <ImageView
                    android:id="@+id/iv_nursinglist"
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_hlqd" />

                <TextView
                    android:id="@+id/tv_nursinglist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slidingmenu_item_text_marinleft"
                    android:text="@string/nursinglist"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_item_text_size" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_nursingpatrol"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slidingmenu_item_height"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft" >

                <ImageView
                    android:id="@+id/iv_nursingpatrol"
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_hlxs" />

                <TextView
                    android:id="@+id/tv_nursingpatrol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/slidingmenu_item_text_marinleft"
                    android:text="@string/nursingpatrol"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_item_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_settinglayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/slidingmenu_setting_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/slidingmenu_option_bg"
            android:clickable="true"
            android:orientation="horizontal" >

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/slidingmenu_item_paddingleft"
                android:paddingRight="22dp" >

                <ImageView
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_sz" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/setting"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_setting_text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_quit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/slidingmenu_option_bg"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="22dp" >

                <ImageView
                    android:layout_width="@dimen/slidingmenu_item_image_width"
                    android:layout_height="@dimen/slidingmenu_item_image_height"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/left_menu_tcdl" />

                <TextView
                    android:id="@+id/tv_quit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/quit"
                    android:textColor="@color/slidingmenu_username_office"
                    android:textSize="@dimen/slidingmenu_setting_text_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@id/ll_settinglayout"
            android:background="@color/slidingmenu_space_line" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#7a7a7a" />

</LinearLayout>