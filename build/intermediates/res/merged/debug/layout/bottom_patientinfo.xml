<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bottom_tag_height"
    android:background="@color/bottom_bg"
    android:baselineAligned="true"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/patient_item_space_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:background="@drawable/bottom_tab_bg"
            android:id="@+id/ll_tab_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:layout_marginTop="4dp"
                android:id="@+id/ib_tab_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/bottom_bhxx_jc_n" />

            <TextView
                android:id="@+id/tv_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottommenu_text_margintop"
                android:text="@string/base"
                android:textColor="@color/login_btn_bg_normal"
                android:textSize="@dimen/bottommenu_tab_text_size" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bottom_tab_bg"
            android:id="@+id/ll_tab_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_order"
                android:layout_width="@dimen/bottommenu_img_height"
                android:layout_height="@dimen/bottommenu_img_height"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/bottom_bhxx_yz" />

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottommenu_text_margintop"
                android:text="@string/todayorder"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/bottommenu_tab_text_size" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bottom_tab_bg"
            android:id="@+id/ll_tab_exam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/bottom_bhxx_jy" />

            <TextView
                android:id="@+id/tv_exam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottommenu_text_margintop"
                android:text="@string/exam"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/bottommenu_tab_text_size" />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/bottom_tab_bg"
            android:id="@+id/ll_tab_cost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/ib_tab_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:src="@drawable/bottom_bhxx_fy" />

            <TextView
                android:id="@+id/tv_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/bottommenu_text_margintop"
                android:text="@string/cost"
                android:textColor="@color/bottom_tab_text"
                android:textSize="@dimen/bottommenu_tab_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>