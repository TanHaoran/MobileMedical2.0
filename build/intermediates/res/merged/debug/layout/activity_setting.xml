<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:thr="http://schemas.android.com/apk/res/com.thr.mobilemedical"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/patientinfo_bg"
    android:orientation="vertical" >

    <com.thr.view.TitleBar
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_height"
        thr:titleText="@string/setting" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/set_top_bg"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/setting_image_height"
            android:layout_height="@dimen/setting_image_height"
            android:layout_marginTop="14dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/set_top_img" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/setting_name_textsize" />

            <TextView
                android:id="@+id/tv_office"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:ellipsize="marquee"
                android:maxWidth="100dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/setting_office_textsize" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/patientinfo_base_margin"
        android:background="@drawable/patientinfo_base_block_bg"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/patientinfo_base_tag_height"
            android:layout_marginLeft="@dimen/patientinfo_base_margin_left"
            android:gravity="center_vertical"
            android:text="@string/change_pwd"
            android:textColor="@color/homepage_conent_text"
            android:textSize="@dimen/setting_tag_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/patientinfo_base_detail_bg"
            android:orientation="vertical"
            android:paddingBottom="@dimen/patientinfo_base_margin_left"
            android:paddingLeft="@dimen/patientinfo_base_margin_left"
            android:paddingRight="@dimen/patientinfo_base_margin_left" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="@dimen/setting_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_base_detail_item_leftpart_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/now_pwd"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_base_detail_item_textsize" />

                <EditText
                    android:layout_width="@dimen/setting_item_edit_width"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="@dimen/setting_item_edit_marginleft"
                    android:background="@drawable/setting_edit_bg"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/setting_edit_paddingleft"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_base_detail_item_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="@dimen/setting_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_base_detail_item_leftpart_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/new_pwd"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_base_detail_item_textsize" />

                <EditText
                    android:layout_width="@dimen/setting_item_edit_width"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="@dimen/setting_item_edit_marginleft"
                    android:background="@drawable/setting_edit_bg"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/setting_edit_paddingleft"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_base_detail_item_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="@dimen/setting_item_margintop"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="@dimen/patientinfo_base_detail_item_leftpart_width"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="@string/ensure_pwd"
                    android:textColor="@color/patientinfo_base_item_leftpart_text"
                    android:textSize="@dimen/patientinfo_base_detail_item_textsize" />

                <EditText
                    android:layout_width="@dimen/setting_item_edit_width"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="@dimen/setting_item_edit_marginleft"
                    android:background="@drawable/setting_edit_bg"
                    android:inputType="textPassword"
                    android:paddingLeft="@dimen/setting_edit_paddingleft"
                    android:textColor="@color/patientinfo_base_item_rightpart_text"
                    android:textSize="@dimen/patientinfo_base_detail_item_textsize" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_item_height"
                android:layout_marginTop="@dimen/setting_item_margintop"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="@dimen/setting_item_edit_width"
                    android:layout_height="@dimen/setting_item_height"
                    android:layout_marginLeft="86dp"
                    android:background="@drawable/btn_setting_save"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>