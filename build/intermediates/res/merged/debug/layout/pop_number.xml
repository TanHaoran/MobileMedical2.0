<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pop_number_line_height"
            android:gravity="center"
            android:textColor="@color/select_user"
            android:textSize="@dimen/login_selectuser_text_size" />

        <LinearLayout
            android:id="@+id/ll_pop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pop_number_line_height"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_screen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:gravity="center_vertical|right"
                        android:paddingRight="10dp"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_erase"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="2"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_erase"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pop_number_line_height"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_1"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_1"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_2"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_2"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_3"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_3"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pop_number_line_height"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_4"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_4"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_5"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_5"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_6"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_6"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pop_number_line_height"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_7"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_7"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_8"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_8"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_9"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_9"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/pop_number_line_height"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_back"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/back"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_0"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_0"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_point"
                        style="?android:attr/buttonBarButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/number_point"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btn_lastitem"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/last_item"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_nextitem"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/next_item"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/pop_number_btn_margin"
                        android:layout_weight="1"
                        android:background="@drawable/btn_changehead_bg"
                        android:text="@string/save"
                        android:textColor="@color/patientinfo_base_item_rightpart_text"
                        android:textSize="@dimen/pop_number_btn_textsize" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>