<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_title_height"
        android:background="@color/patientinfo_bg"
        android:gravity="center"
        android:text="@string/alert"
        android:textColor="@color/bottom_tab_text"
        android:textSize="@dimen/dialog_title_textsize" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/patient_item_space_bg" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="20dp"
        android:paddingLeft="10dp"
        android:paddingTop="20dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/patient_item_space_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_btn_layout_height"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn"
            android:layout_width="@dimen/dialog_btn_width"
            android:layout_height="@dimen/dialog_btn_height"
            android:background="@drawable/btn_sure_corner_bg"
            android:text="@string/ensure"
            android:textColor="@color/white"
            android:textSize="@dimen/dialog_btn_text_size" />
    </LinearLayout>

</LinearLayout>