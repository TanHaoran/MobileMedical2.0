                            android:layout_width="@dimen/patientinfo_base_detail_item_leftpart_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/inhosday"
                            android:textColor="@color/patientinfo_base_item_leftpart_text"
                            android:textSize="@dimen/patientinfo_base_detail_item_textsize" />

                        <TextView
                            android:id="@+id/tv_day"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/patientinfo_base_detail_item_rightpart_marginleft"
                            android:textColor="@color/patientinfo_base_item_rightpart_text"
                            android:textSize="@dimen/patientinfo_base_detail_item_textsize" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/patientinfo_base_detail_item_height"
                        android:layout_marginTop="@dimen/patientinfo_base_detail_item_margintop"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/patientinfo_base_detail_item_leftpart_width"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:text="@string/inhostimes"
                            android:textColor="@color/patientinfo_base_item_leftpart_text"
                            android:textSize="@dimen/patientinfo_base_detail_item_textsize" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
