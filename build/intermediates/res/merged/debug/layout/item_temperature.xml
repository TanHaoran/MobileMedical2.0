<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nursingrecord_temperature_form_head_height"
    android:background="@color/transparent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_bed"
        android:layout_width="@dimen/nursingrecord_temperature_form_head_bedno"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/bottom_tab_text"
        android:textSize="@dimen/nursingrecord_temperature_form_content_textsize" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="@dimen/nursingrecord_temperature_form_head_name"
        android:layout_height="match_parent"
        android:ellipsize="marquee"
        android:gravity="center"
        android:textColor="@color/bottom_tab_text"
        android:textSize="@dimen/nursingrecord_temperature_form_content_textsize" />

    <RelativeLayout
        android:id="@+id/rl_time1"
        android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/tv_time1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/bottom_tab_text"
            android:textSize="@dimen/nursingrecord_temperature_form_content_textsize" />

        <ImageView
            android:id="@+id/iv_time1"
            android:layout_width="@dimen/nursingrecord_add_img_height"
            android:layout_height="@dimen/nursingrecord_add_img_height"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/add_icon"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time2"
        android:layout_width="@dimen/nursingrecord_temperature_form_head_time"
        android:layout_height="match_parent" >

