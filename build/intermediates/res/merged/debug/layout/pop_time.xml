<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/translucent" >

    <LinearLayout
        android:id="@+id/ll_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_login_popup_height"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/login_login_popup_btn_layout_height"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_cancle"
                android:layout_width="@dimen/login_login_popup_btn_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/cancle"
                android:textColor="@color/login_btn_bg_normal"
                android:textSize="@dimen/login_selectuser_btn_text_size" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/select_time"
                android:textColor="@color/select_user"
                android:textSize="@dimen/login_selectuser_text_size" />

            <TextView
                android:id="@+id/tv_ensure"
                android:layout_width="@dimen/login_login_popup_btn_width"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/ensure"
                android:textColor="@color/login_btn_bg_normal"
                android:textSize="@dimen/login_selectuser_btn_text_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <com.thr.view.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="@dimen/nursingrecord_time_select_width"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/hour"
                android:textColor="@color/select_user" />

            <com.thr.view.WheelView
                android:id="@+id/wv_minute"
                android:layout_width="@dimen/nursingrecord_time_select_width"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/minute"
                android:textColor="@color/select_user" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>