<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="@color/patient_item_space_bg" />

            <!-- 填充色 -->
            <solid android:color="@color/white" />
            <!-- 边框圆角 -->
            <corners
                android:bottomLeftRadius="@dimen/corner"
                android:topLeftRadius="@dimen/corner" />

            <padding
                android:bottom="@dimen/popup_patient_item__content_padding"
                android:left="@dimen/popup_patient_item__content_padding"
                android:right="@dimen/popup_patient_item__content_padding"
                android:top="@dimen/popup_patient_item__content_padding" />
        </shape>
    </item>

</layer-list>